{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "exclude": [
    // might be able to remove this if this line works: "src/**/static-templates"
    "src/commands/setup-project/create-node-api/static-templates",
    "src/**/templates",
    "src/**/static-templates",
    "delete"
  ]
}
